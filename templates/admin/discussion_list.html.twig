{% extends 'base.html.twig' %}

{% block title %}Liste des discussions{% endblock %}

{% block body %}
    <h1>Liste des discussions</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Titre</th>
                <th>Contenu</th>
                <th>Auteur</th>
                <th>Date de création</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for post in posts %}
                <tr>
                    <td>{{ post.titre }}</td>
                    <td>{{ post.contenu }}</td>
                    <td>{{ post.auteur.email }}</td>
                    <td>{{ post.dateCreation|date('Y-m-d H:i') }}</td>
                    <td>
                        <a href="{{ path('admin_post_edit', {id: post.id}) }}" class="btn btn-primary">Modifier</a>
                        <a href="{{ path('admin_post_delete', {id: post.id}) }}" class="btn btn-danger">Supprimer</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">Aucun post trouvé.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('admin_post_create') }}" class="btn btn-success">Créer un nouveau post</a>
{% endblock %}
